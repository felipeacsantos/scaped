<%= form_for(objeto) do |f| %>
  <% if objeto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(objeto.errors.count, "error") %> prohibited this objeto from being saved:</h2>

      <ul>
      <% objeto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <%= f.fields_for :parametros do |builder| %>
      <%= render 'parametro_fields', :f => builder %>
    <% end %>

    <p id="addButton"><%= link_to_add_fields "Add parameters", f, :parametros %></p>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
