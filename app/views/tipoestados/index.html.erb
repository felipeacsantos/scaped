<p id="notice"><%= notice %></p>

<h1>Tipo de Estados</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipoestados.each do |tipoestado| %>
      <tr>
        <td><%= tipoestado.descricao %></td>
        <td><%= link_to 'Exibir', tipoestado %></td>
        <td><%= link_to 'Editar', edit_tipoestado_path(tipoestado) %></td>
        <td><%= link_to 'Remover', tipoestado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Estado', new_tipoestado_path %>
