<!DOCTYPE html>
<html>
    <head>
        <title>Scaped</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <!-- Bootstrap core CSS -->
        <%= stylesheet_link_tag 'bootstrap.min.css', media: 'all' %>

        <!-- Custom styles for this template -->
        <%= stylesheet_link_tag 'simple-sidebar.css', media: 'all' %>
        <%= stylesheet_link_tag 'freelancer.min.css', media: 'all' %>
        <!-- <link href="assets/stylesheets/freelancer.min.css" rel="stylesheet"> -->

        <%= javascript_include_tag 'jquery.min.js' %>
        <%= javascript_include_tag 'popper/popper.min.js' %>
        <%= javascript_include_tag 'bootstrap.min.js' %>
        <%= javascript_include_tag 'application.js' %>

        <!-- Custom fonts for this template -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css"> 
    </head>
    <body>
 <div id="wrapper" class="toggled">

       <!-- Sidebar -->
       <div id="sidebar-wrapper">
           <ul class="sidebar-nav">
               <li class="sidebar-brand" style="text-indent: 0px;height: inherit;">
                   <%= image_tag "scaped-logo.jpg", style: "width: 100%;text-align: center;" %>
               </li>
           </ul>
       </div>
       <!-- /#sidebar-wrapper -->

       <!-- Page Content -->
       <div id="page-content-wrapper py-0">
           <div class="container-fluid px-4">
               <div class="row">
                 <div class="col-3 text-center py-3">
                  <%= button_to "Gerar XML", :action => "create_file", :controller => "testedefinicaos"%>
                 </div>
                 <div class="col-3 text-center py-3">
                 </div>
                 <% if !usuario_signed_in? %>
                   <div class="col-3 text-center py-3">
                    <%= link_to "Log in", new_usuario_session_path %>
                   </div>
                   <div class="col-3 text-center py-3">
                    <%= link_to "Cadastre-se", new_usuario_registration_path %>
                   </div>
                 <% else %>
                   <div class="col-3 text-center py-3">
                    <%= link_to "Minha conta", edit_usuario_registration_path %>
                   </div>
                   <div class="col-3 text-center py-3">
                    <%= link_to "Log out", destroy_usuario_session_path, method: :delete %>
                   </div>
                 <% end %>
                </div>
               <!--a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Toggle Menu</a-->
               <p class="alert"><%= alert %></p>
               <%= yield %>
           </div>
       </div>
       <!-- /#page-content-wrapper -->

   </div>
   <!-- /#wrapper -->
   <!-- Menu Toggle Script -->
   <script>
   $("#menu-toggle").click(function(e) {
       e.preventDefault();
       $("#wrapper").toggleClass("toggled");
   });
   </script>
</body>
</html>
